{
  "name": "@mastepanoski/my-agent-acp",
  "version": "1.0.0",
  "type": "module",
  "description": "Agente ACP con LM Studio, Bun y TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "test": "bun test src/**/*.test.ts",
    "test:integration": "bun scripts/test-integration.js",
    "test:integration:manual": "echo '⚠️  For manual testing: Start server with \"bun run start\" then run \"bun run dist/test/test-agent.js\"'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "build": "tsc",
    "dev": "bun --watch src/index.ts",
    "dev:node": "nodemon --exec \"node --loader ts-node/esm\" src/index.ts",
    "start": "node dist/index.js",
    "start:ts": "bun src/index.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "prepare": "husky install",
    "commit": "git-cz"
  },
  "keywords": ["acp", "agent", "ai", "lm-studio", "typescript", "bun"],
  "author": "Mauro Stepanoski",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^24.1.0",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.8.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/bun": "^1.2.19",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.0.11",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2"
  }
}
